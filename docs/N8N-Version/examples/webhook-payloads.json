{
  "phase_1_ideation": {
    "description": "Trigger Phase 1: Ideation (Dreamer/Doer dialectic)",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-1",
    "payload": {
      "project_name": "my-project",
      "idea_text": "Your product idea here",
      "max_rounds": 8,
      "min_rounds": 4
    },
    "example": {
      "project_name": "pond-game",
      "idea_text": "A game where you're a frog in a pond, managing your ecosystem"
    }
  },
  "phase_2_focus_group": {
    "description": "Trigger Phase 2: User Focus Group",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-2",
    "payload": {
      "project_name": "my-project",
      "vision_file": ".thursian/projects/my-project/visions/vision-v1.md",
      "participants_count": 5,
      "round_count": 5,
      "parallel_research": true
    }
  },
  "phase_3_engineering_meeting": {
    "description": "Trigger Phase 3: PRD Creation",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-3",
    "payload": {
      "project_name": "my-project",
      "input_files": [
        ".thursian/projects/my-project/visions/vision-v1.md",
        ".thursian/projects/my-project/focus-groups/report.md"
      ],
      "evaluation_type": "create",
      "output_type": "prd"
    }
  },
  "phase_4_stakeholder_review": {
    "description": "Trigger Phase 4: PRD Validation",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-4",
    "payload": {
      "project_name": "my-project",
      "prd_file": ".thursian/projects/my-project/prds/prd-v1.md",
      "round_structure": "section_by_section",
      "output_type": "validation_report"
    }
  },
  "phase_5_triage": {
    "description": "Trigger Phase 5: Feature Triage",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-5",
    "payload": {
      "project_name": "my-project",
      "input_files": [
        ".thursian/projects/my-project/prds/prd-approved.md",
        ".thursian/projects/my-project/prds/stakeholder-feedback.md"
      ],
      "evaluation_type": "triage",
      "categories": [
        "mvp_critical",
        "alpha_release",
        "beta_release",
        "post_launch",
        "out_of_scope"
      ]
    }
  },
  "phase_6_architecture": {
    "description": "Trigger Phase 6: Architecture Design",
    "endpoint": "POST http://localhost:5678/webhook/genesis/phase-6",
    "payload": {
      "project_name": "my-project",
      "input_files": [
        ".thursian/projects/my-project/design-docs/PRD-v0.2.md",
        ".thursian/projects/my-project/prds/triage-report.md"
      ],
      "evaluation_type": "design",
      "spawn_substages": true,
      "output_type": "architecture"
    }
  },
  "full_pipeline": {
    "description": "Trigger complete GENESIS pipeline (Phases 1-12)",
    "endpoint": "POST http://localhost:5678/webhook/genesis/run-pipeline",
    "payload": {
      "project_name": "my-project",
      "idea_text": "Your product idea",
      "execution_mode": "full_genesis",
      "auto_advance": true,
      "human_review_phases": [4, 8, 12]
    },
    "execution_modes": {
      "full_genesis": "All 12 phases (idea to production)",
      "idea_to_approved": "Phases 1-8 (planning only)",
      "idea_to_prototype": "Phases 1-9 (build MVP)",
      "idea_to_alpha": "Phases 1-10 (with testing)"
    }
  },
  "curl_examples": {
    "phase_1": "curl -X POST http://localhost:5678/webhook/genesis/phase-1 \\\n  -H 'Content-Type: application/json' \\\n  -d '{\"project_name\": \"test\", \"idea_text\": \"A productivity app\"}'",
    "full_pipeline": "curl -X POST http://localhost:5678/webhook/genesis/run-pipeline \\\n  -H 'Content-Type: application/json' \\\n  -d '{\"project_name\": \"my-app\", \"idea_text\": \"Your idea\", \"execution_mode\": \"idea_to_approved\"}'"
  }
}
